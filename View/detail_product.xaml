<Window x:Class="WPF_Market.View.detail_product"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WPF_Market.ViewModel"
      mc:Ignorable="d" 
      d:DesignWidth="1280"
      WindowStartupLocation="CenterScreen"
      IsEnabled="True"
      MinHeight="670"
      MinWidth="1280"
      Title="detail_product">
   
    <ScrollViewer >
    <Grid>
        
        <Grid Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition MinHeight="120"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
            <Border CornerRadius="5" BorderThickness="1"
                    Background="#EEEEEE">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="550"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0">
                            <StackPanel Orientation="Vertical">
                                <Border BorderThickness="2"
                                        Height="500">
                                    <Image x:Name="DefaultImage"
                                        Source="{Binding DefaultImage, Mode=TwoWay}"
                                            VerticalAlignment="Top"
                                           
                                    ></Image>
                                </Border>
                                <ScrollViewer VerticalAlignment="Bottom" Height="120" HorizontalScrollBarVisibility="Visible"
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="0 5 0 0">
                                    <ItemsControl x:Name="ListImage"
                                ItemsSource="{Binding Product.ImageList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Image Source="{Binding}"
                                                        Height="120"
                                                        Width="120"
                                                        Margin="5 0 0 10"
                                                        Stretch="Uniform"
                                                        IsEnabled="True"
                                                        >
                                                        <Image.InputBindings>
                                                            <MouseBinding Gesture="LeftClick" 
                                                                          Command="{Binding DataContext.ChangePicture,RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                    CommandParameter="{Binding}"/>
                                                        </Image.InputBindings>
                                                    </Image>

                                                  
                                                </Grid>
                                               
                                            </DataTemplate>

                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                            
                        
                    </Grid>
                   
                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left"  Margin="10" >
                                <TextBlock Text="{Binding Product.Ten}"
                                       FontSize="30"
                                       FontWeight="DemiBold"
                                       Margin="0 10"
                                       Foreground="#5F5D5C"
                                       FontFamily="Dubai"/>
                            
                            <materialDesign:RatingBar
                                x:Name="BasicRatingBarFractional"
                                Value="{Binding Product.Rate}"
                                IsReadOnly="True"
                                Margin="0 10"/>
                            <StackPanel Orientation="Horizontal" Margin="0 10">
                                <TextBlock x:Name="tbl_review"
                                           Text="999 reviews"
                                           FontSize="20"
                                           Foreground="#B6A0B3"
                                           />
                                <Button Background="Transparent" Margin="20 0" BorderThickness="0">
                                    <materialDesign:PackIcon Kind="CommentEye"
                                                             Height="25"
                                                             Width="25"
                                                             Foreground="Black"/>
                                </Button>
                            </StackPanel>
                            <TextBlock x:Name="Tong_quan" 
                                       Text="{Binding TongQuan}"
                                       Margin="0 10"
                                       FontSize="20"
                                       Foreground="#A6A0A1"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="txlb_addShop"
                                       FontSize="25"
                                       Margin="0 10"
                                        FontWeight="Bold">
                                <Run Foreground="#5F5D5C">Shop:</Run>
                                <Run Foreground="#A6A0A1"
                                     Text="{Binding Product.Address}"></Run> 
                            </TextBlock>
                            <TextBlock x:Name="like_new"
                                       FontSize="25"
                                       Margin="0 10"
                                       FontWeight="Bold">
                                <Run Foreground="#5F5D5C">Newness:</Run>
                                <Run Foreground="#A6A0A1"
                                     Text="{Binding Product.DoMoi}"></Run>
                            </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0 10">
                                    <TextBlock Text="ORIGIN PRICE: "
                                               FontSize="25"
                                               VerticalAlignment="Center"
                                               FontFamily="Dubai"
                           
                                               Foreground="#6B605E"
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="txbl_origin_price"
                                               FontSize="25"
                                               Text="{Binding Product.Gia, StringFormat='c'}"
                                               
                                               Foreground="#0FC20F"
                                               VerticalAlignment="Center"
                                               FontFamily="Dubai"
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="txbl_discount"
                                               Margin="20 0 0 0"
                                               FontSize="25"
                                               Text="{Binding Product.Discount}"
                                               Foreground="#424242"
                                               VerticalAlignment="Center"
                                               FontFamily="Dubai"
                                               FontWeight="Bold"/>
                                    <TextBlock
                                               FontSize="25"
                                               Text="%"
                                               Foreground="#424242"
                                               VerticalAlignment="Center"
                                               FontFamily="Dubai"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 10">
                                <TextBlock Text="CUR PRICE: "
                                           FontSize="25"
                                           VerticalAlignment="Center"
                                           FontFamily="Dubai"
                                           Foreground="#6B605E"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="txbl_cur_price"
                                           FontSize="25"
                                           Text="{Binding CurrentPrice, StringFormat='c'}"
                                           Foreground="#0FC20F"
                                           VerticalAlignment="Center"
                                           FontFamily="Dubai"
                                           FontWeight="Bold"/>
                            </StackPanel>


                                <StackPanel Orientation="Horizontal" Margin="0 10">
                                <TextBlock Text="Number of Products: "
                                           FontSize="25"
                                           VerticalAlignment="Center"
                                           FontFamily="Dubai"
                                           Foreground="#6B605E"
                                           FontWeight="Bold"/>
                                <ComboBox x:Name="cbb_num"
                                          Height="27"
                                          Width="150"
                                          materialDesign:HintAssist.Hint="How many do you want?"
                                          materialDesign:HintAssist.FontFamily="Dubai"
                                          materialDesign:HintAssist.HintOpacity=".26"
                                          IsEditable="True">
                                    
                                    <ComboBoxItem Content="1" />
                                    <ComboBoxItem Content="2" />
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="4" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button 
                                        Background="#FE9E1A" 
                                        Foreground="#645A4C" 
                                        FontSize="20" 
                                        materialDesign:ButtonAssist.CornerRadius="15" 
                                        Height="70" Width="70">
                                    <materialDesign:PackIcon Kind="Heart"
                                                             Height="40"
                                                             Width="40"/>
                                </Button>
                                <Button Content="Add to the cart" 
                                        Background="#FE9E1A" 
                                        Foreground="#645A4C" 
                                        FontSize="20" 
                                        Margin="10 45"
                                        FontFamily="Dubai"
                                        FontWeight="Bold"
                                        materialDesign:ButtonAssist.CornerRadius="15" 
                                        Height="70" Width="200"/>
                                
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <Border CornerRadius="5" BorderThickness="1"
                    Background="#EEEEEE" Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Detail Information"
                               FontSize="30"
                               FontFamily="Dubai"
                               Margin="20 0"
                               FontWeight="Bold">
                        
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Status"
                                   FontSize="20"
                                   Margin="20 0"
                                   VerticalAlignment="Center"></TextBlock>
                            <Expander
                                Margin="28,0,0,0"
                                HorizontalAlignment="Stretch"
                                Header="More detail"
                                Width="1100">
                                <StackPanel
                                    Margin="24,8,24,16"
                                    Orientation="Vertical"
                                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                                    <TextBlock
                                        Text="{Binding TTThem}"/>
                                    <TextBlock
                                         />
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Gurantee"
                                FontSize="20"
                                Margin="20 0"
                                VerticalAlignment="Center"></TextBlock>
                            <Expander
                                HorizontalAlignment="Stretch"
                                 Header="More detail"
                                Width="1100">
                                <StackPanel
                                    Margin="24,8,24,16"
                                    Orientation="Vertical"
                                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                                    <TextBlock
                                Text="{Binding BaoHanh}"/>
                                    <TextBlock
                                    />
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </StackPanel>
            </Border>
            
        </Grid>
    </Grid>
    </ScrollViewer>
</Window>
