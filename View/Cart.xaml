<Page x:Class="WPF_Market.View.Cart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WPF_Market.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MinWidth="800"
             MinHeight="450"
             ShowsNavigationUI="False">
    <Border CornerRadius="10"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Cart"
                                         Margin="10,0,0,0"
                                         Width="50"
                                         Height="50"/>
                <TextBlock Text="My Cart"
                           FontSize="30"
                           FontFamily="Dubai"
                           FontWeight="Bold">
                    
                </TextBlock>
            </StackPanel>
            <Grid Grid.Row="1">
                <ScrollViewer x:Name="ThanhCuon">
                    <StackPanel  HorizontalAlignment="Center"
                                Orientation="Horizontal"                               
                                Margin="0,20,0,20"
                                Height="150"
                                Width="750">
                        <CheckBox
                            Content="Choose it!"
                            Style="{StaticResource MaterialDesignCheckBox}"
                            />
                        <Grid Width="100" Height="100" Margin="10,0,0,0">
                            <Ellipse >
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="D:\LTWD\LTWD_FinalProject\SanPham\7783\Images\OIP (1).jpg"
                                        Stretch="UniformToFill">
                                    </ImageBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                        </Grid>
                        <TextBox x:Name="txtNameProduct"
                            MaxHeight="140"
                            MaxWidth="140"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Text="Meowww"
                            AcceptsReturn="True"                        
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            IsReadOnly="True"
                            IsEnabled="False"/>
                        <TextBox x:Name="txtPrice"
                            MaxHeight="140"
                            MaxWidth="200"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Text="Meowww"
                            AcceptsReturn="True"                        
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            IsReadOnly="True"
                            IsEnabled="False"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            
        </Grid>
    </Border>
</Page>
